{
	"name": "refetty",
	"private": true,
	"scripts": {
		"setup": "yarn setup:clean && yarn setup:bs",
		"setup:clean": "lerna clean -y",
		"setup:bs": "lerna bootstrap",
		"lint": "lerna run lint",
		"dev": "lerna run dev",
		"build": "lerna run build",
		"packages": "run-s packages:*",
		"packages:lint": "lerna run --parallel lint",
		"packages:build": "lerna run build",
		"prerelease": "yarn run packages",
		"release": "lerna publish --conventional-commits",
		"release:beta": "yarn release --npm-tag=beta --preid=beta"
	},
	"author": {
		"name": "Bruno Bertolini",
		"email": "dev@brunobertolini.com",
		"url": "http://brunobertolini.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/brunobertolini/refetty"
	},
	"workspaces": [
		"packages/*"
	],
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional",
			"@commitlint/config-lerna-scopes"
		]
	},
	"lint-staged": {
		"*.{{js,jsx,mjs,ts,tsx,md,mdx}}": [
			"yarn fix",
			"git add"
		]
	},
	"devDependencies": {
		"@commitlint/cli": "^7.2.1",
		"@commitlint/config-conventional": "^7.1.2",
		"@commitlint/config-lerna-scopes": "^7.3.1",
		"husky": "^1.2.1",
		"lerna": "^3.10.7",
		"lint-staged": "^8.1.0",
		"microbundle": "^0.9.0",
		"prettier": "^1.15.3",
		"standard-version": "^4.4.0"
	},
	"dependencies": {
		"@refetty/fetch": "file:packages/fetch",
		"@refetty/use-async": "file:packages/use-async",
		"refetty": "file:packages/refetty"
	}
}
