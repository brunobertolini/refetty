{
	"name": "refetty",
	"version": "0.1.0-alpha.1",
	"license": "MIT",
	"main": "dist/index.js",
	"umd:main": "dist/index.umd.js",
	"module": "dist/index.m.js",
	"source": "src/index.js",
	"files": [
		"dist/",
		"package.json",
		"README.md"
	],
	"author": {
		"name": "Bruno Bertolini",
		"email": "dev@brunobertolini.com",
		"url": "http://brunobertolini.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/brunobertolini/refetty"
	},
	"scripts": {
		"fix": "yarn fix:lint",
		"fix:lint": "prettier \"src/**/*.{js,jsx,ts,tsx}\" --write",
		"lib:watch": "microbundle watch --target browser --name refetty --jsx React.createElement",
		"lib:build": "microbundle build --target browser --name refetty --jsx React.createElement",
		"lib:release": "standard-version --no-verify",
		"build": "yarn lib:build",
		"prepublish": "yarn build"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{{js,jsx,mjs,ts,tsx,md,mdx}}": [
			"yarn fix",
			"git add"
		]
	},
	"peerDependencies": {
		"react": "^16.7.0-alpha.2"
	},
	"devDependencies": {
		"@commitlint/cli": "^7.2.1",
		"@commitlint/config-conventional": "^7.1.2",
		"husky": "^1.2.1",
		"lint-staged": "^8.1.0",
		"microbundle": "^0.8.3",
		"prettier": "^1.15.3",
		"standard-version": "^4.4.0"
	}
}
